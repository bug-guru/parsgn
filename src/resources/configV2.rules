ConfigFile: Rule+ -I* -#EOF;

Rule: -I* Token I* -":" -I* Expression+ -";";

// Ignorable
I: [WhiteSpace Comment]+;

WhiteSpace: #WHITESPACE+;

Comment: [SingleLineComment MultiLineComment];

SingleLineComment: -"//" #DEFINED* -#EOL;

MultiLineComment: -"/*" #DEFINED* -"*/";

Token: #UNICODE_IDENTIFIER_START #UNICODE_IDENTIFIER_PART*;

Expression: ("-" -I*)? [RuleRef OneOf CharType String Group] -I* (Quantifier -I*)?;

RuleRef: Token;

OneOf: -"[" (-I* [RuleRef CharType String]){2,} -I* -"]";

CharType: -"#" Token; //TODO: list all possible char types

String: -"\"" ["\\\"" "\\"" #DEFINED]* -"\"";

Group: -"(" -I* Expression+ -")";

Quantifier: [ZeroOrOne OneOrMore ZeroOrMore ExactlyNTimes AtLeastNTimes AtLeastNButNotMoreThanMTimes];

ZeroOrOne: -"?";

OneOrMore: -"+";

ZeroOrMore: -"*";

ExactlyNTimes: -"{" -I* Number -I* -"}";

AtLeastNTimes: -"{" -I* Number -I* -"," -I* -"}";

AtLeastNButNotMoreThanMTimes: -"{" -I* Number -I* -"," -I* Number -I* -"}";

Number: #DIGIT*;
