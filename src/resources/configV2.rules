ConfigFile: (Rule+ I*);

Rule: (I* Token I* ":" Expression I* ";");

// Ignorable
I: [WhiteSpace Comment ]+;

WhiteSpace: #WHITESPACE+;

Comment: [SingleLineComment MultiLineComment];

SingleLineComment: ("//" #DEFINED* #LINE_SEPARATOR);

MultiLineComment: ("/*" #DEFINED* "*/");

Token: (#UNICODE_IDENTIFIER_START #UNICODE_IDENTIFIER_PART*);

Expression: (I* "-"? I* "!"? I* [Token Sequence OneOf CharType String] Quantifier?)+;

Sequence: "(" Expression I* ")";

OneOf: ("[" Expression I* "]");

CharType: ("#" Token);

String: ("\"" ["\\\"" "\\"" #DEFINED]* "\"");

Quantifier: (I* ["?" "+" "*" ("{" I* #DIGIT+ I* ("," I* #DIGIT*)? I* "}")]);
