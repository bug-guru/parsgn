ConfigFile: @SOF Rule+ I* @EOF;

Rule: I* RuleName I* ":" Expression I* ";";

// Ignorable
I: (WhiteSpace | Comment )+;

WhiteSpace: #WHITESPACE+;

Comment: [SingleLineComment MultiLineComment];

SingleLineComment: "//" #DEFINED* @EOL;

MultiLineComment: "/*" #DEFINED* "*/";

RuleName: Token;

Token: #UNICODE_IDENTIFIER_START #UNICODE_IDENTIFIER_PART* -!#UNICODE_IDENTIFIER_PART;

Expression: (I* "-"? I* [Token Sequence OneOf CharType String Event] I* Quantifier?)+;

Sequence: "(" Expression ")";

OneOF: "[" Expression "]";

CharType: "#" Token;

String: "\"" ["\\\"" "\\"" #DEFINED]* "\"";

Event: "@" Token;

Quantifier: I* ["?" "+" "*" ("{" I* #DIGIT+ I* ("," I* #DIGIT*)? I* "}")];
